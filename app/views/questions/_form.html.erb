<div class="container">
  <div class="row">
      <div class="col-ms-6 col-md-6 col-md-offset-2">
        <h2><%= form_title %></h2>
        <%= form_for @question do |q| %>
        <div class="form-group">
          <%= q.label "Title Question" %> <br>
          <%= q.text_field :title, class:"form-control" %>
        </div>
        <div>
          <%= q.label :description %> <br>
          <%= q.text_area :description, class:"form-control", rows:"10" %>
        </div><br>
        <div class="text-right">
          <%= q.submit form_title, class: "btn btn-success"  %>
        </div>
        <%end %>
    </div>
  </div>
</div>
