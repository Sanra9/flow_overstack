
<div class="container">
  <div class="row">
  <div class="col-ms-6">
<div class="text-right">
  <%= link_to '<button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span></button>'.html_safe, new_question_path %>
</div>
<h1>Questions</h1><br>
<% @questions.each do |q| %>
<div class="panel panel-primary">
  <div class="panel-heading">
<%= q.title %>
<div class="text-right">
  <%= link_to '<button type="button" class="btn btn-success"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>'.html_safe, edit_question_path(q) %>  
  <%= link_to '<button type="button" class="btn btn-danger"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>'.html_safe, q, method: :delete %>
</div>
</div>


<div class="panel-body">
  <%= q.description %>
</div>
</div>
<%end %>
</div>
</div>
</div>
