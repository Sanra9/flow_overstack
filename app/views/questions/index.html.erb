
<div class="container">
  <div class="row">
    <div class="col-ms-10 col-md-10 col-md-offset-1">
      <div class="text-right">
        <%= link_to '<button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span></button>'.html_safe, new_question_path %>
      </div>
      <h1>Questions</h1><br>
      <% @questions.each do |q| %>
      <div class="col-ms-1 col-md-1">
       <h5>Answers</h5>
        <div class="col-ms-1 col-md-1">
          <div class="text-center">
            <%= q.answers.length  %>
          </div>
        </div>
      </div>
      <div class="col-ms-1 col-md-1">
       <h5>Votes</h5>
        <div class="col-ms-1 col-md-1">
          <div class="text-center">
            0
          </div>
        </div>
      </div>


  <div class="col-ms-10 col-md-10">
    <div class="panel panel-primary">
        <div class="panel-heading">
          <%= link_to q.title, q, :style=> 'color:#FFFFFF;' %>
          <div class="text-right">
            <%= link_to '<button type="button" class="btn btn-success"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>'.html_safe, edit_question_path(q) %>
            <%= link_to '<button type="button" class="btn btn-danger"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>'.html_safe, q , method: :delete, data: {confirm: 'Are you sure?'} %>
          </div>
        </div>
        <div class="panel-body">
          <%= q.description.first(25)  %>...
        </div>
      </div>
    </div>
      <%end %>
    </div>
  </div>
</div>
