<div class="container">
  <div class="row">
    <div class="col-ms-8 col-md-8 col-md-offset-1">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= @question.title %>
        </div>
        <div class="panel-body">
        <%= @question.description %>
        </div>
      </div>
      <h2>Answers</h2>
      <div class="jumbotron">
      <% @question.answers.each do |content| %>
        <div class="thumbnail">
          <div class="caption">
        <p><%= content.content %></p>
      </div>
      </div>
      <% end %>
    </div> <br>

      <h3>Answer Back</h3>
      <%= form_with(model: [ @question, @question.answers.build ], local: true) do |a| %>
        <div class="form-group">
          <%= a.text_area :content, class: "form-control", placeholder: "Add Answer", rows: 5 %>
        </div>
        <div class="actions text-left">
          <%= a.submit "Add Answer", class: "btn btn-success" %>
        </div>
      <% end %> <br>
      <div class="text-right">
        <%= link_to '<button type="button" class="btn btn-primary">Back to Questions</button>'.html_safe, root_path %> <br>
      </div>
    </div>
  </div>
</div>
